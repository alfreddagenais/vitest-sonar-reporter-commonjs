{
    "name": "vitest-sonar-reporter-commonjs",
    "version": "0.0.5",
    "description": "SonarQube reporter for Vitest - With commonjs",
    "author": "Alfred Dagenais <jesuis@alfreddagenais.com>",
    "license": "MIT",
    "exports": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "dist"
    ],
    "engines": {
        "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
    },
    "packageManager": "pnpm@7.27.1",
    "homepage": "https://github.com/alfreddagenais/vitest-sonar-reporter-commonjs",
    "bugs": "https://github.com/alfreddagenais/vitest-sonar-reporter-commonjs",
    "repository": "https://github.com/alfreddagenais/vitest-sonar-reporter-commonjs",
    "scripts": {
        "changelog": "npx conventional-changelog-cli -i CHANGELOG.md -p conventionalcommits -s -r 0",
        "prebuild": "rm -rf ./dist",
        "build": "tsc --project tsconfig.prod.json",
        "build:commonjs": "pnpm build --module commonjs",
        "start": "vitest --update",
        "lint": "eslint . --max-warnings 0 --ext .ts && publint",
        "test": "vitest",
        "validate": "pnpm build && pnpm lint && pnpm test run"
    },
    "devDependencies": {
        "@types/node": "^18.14.0",
        "@typescript-eslint/eslint-plugin": "^5.53.0",
        "@typescript-eslint/parser": "^5.53.0",
        "eslint": "^8.34.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-prettier": "^4.2.1",
        "minimatch": "^7.0.1",
        "prettier": "^2.8.4",
        "publint": "^0.1.9",
        "typescript": "^4.9.5",
        "vite": "^4.1.4",
        "vitest": "^0.28.5"
    },
    "peerDependencies": {
        "vitest": ">=0.18.0"
    },
    "keywords": [
        "vitest",
        "vitest-reporter",
        "vitest-reporter-commonjs",
        "sonar",
        "sonarqube"
    ],
    "prettier": {
        "singleQuote": true,
        "tabWidth": 4
    }
}
